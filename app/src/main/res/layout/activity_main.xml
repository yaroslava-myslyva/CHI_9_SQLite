<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_name_customers_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_name_customers_list"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/customers_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/customers_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/tv_name_cb_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name_customers_list" />

    <TextView
        android:id="@+id/tv_name_cb_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_name_cb_list"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/customers_books_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/customers_list" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/customers_books_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/buttons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name_cb_list" />

    <GridLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customers_books_list">

        <Button
            android:id="@+id/button_create"
            android:layout_height="wrap_content"
            android:layout_width="150dp"

            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:text="@string/create" />

        <Button
            android:id="@+id/button_join"
            android:layout_height="wrap_content"
            android:layout_width="150dp"

            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:text="@string/join" />

        <Button
            android:id="@+id/button_setup_customers"
            android:layout_height="wrap_content"
            android:layout_width="150dp"

            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:text="@string/view_customers" />

        <Button
            android:id="@+id/button_migrate"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:text="@string/migrate" />

        <Button
            android:id="@+id/button_delete_all"
            android:layout_height="wrap_content"
            android:layout_width="150dp"

            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:text="@string/delete_all" />

        <Button
            android:id="@+id/button_add_trigger"
            android:layout_height="wrap_content"
            android:layout_width="150dp"

            android:layout_columnWeight="1"
            android:layout_gravity="center"
            android:text="@string/add_trigger" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>